// forEach a hash/array
let forEach = fn (list, func) {
    if typeof(list) == ARRAY {
        loop(fn(t) {
            func(list[t])
        }, len(list))
    } else if typeof(list) == HASH {
        let keys = keys(list)
        loop(fn(i) {
            let key = keys[i]
            func(key, list[key])
        }, len(keys))
    }
}

// returns a new hash/array base on a forEach loop
let map = fn (list, func) {
    if typeof(list) == ARRAY {
        let newList = []
        forEach(list) fn(e) {
            let result = func(e)
            append(newList, result)
        }
        return newList
    } else if typeof(list) == HASH {
        let newHash = {}
        forEach(list) fn(k, v) {
            let result = func(k, v)
            set(newHash, k, result)
        }
        return newHash
    }
}

// whether an array contains an item
let contains = fn(list, item) {
    if typeof(list) == ARRAY {
        let cont = false
        forEach(list) fn(e) {
            if e == item {
                cont = true
            }
        }
        return cont
    }
}